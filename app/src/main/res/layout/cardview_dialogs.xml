<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dialog"
            type="com.nanziq.messenger.Model.Dialog"/>
    </data>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_height="@dimen/cardview_height"
        android:layout_width="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/cardview_height"
            android:layout_height="@dimen/cardview_height"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/imageView"
            android:text="@{dialog.getDialogNameFormat}"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/imageView"
            android:text="@{dialog.lastMessageFormatted}"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/cardview_height"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="@{dialog.dateFromLastMessageFormatted}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</layout>